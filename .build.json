{
  "log": {
    "enabled": true,
    "debug": false,
    "console": true,
    "output": ""
  },
  "profiles": {
    "development": ["serve", "watch", "lint", "compile"]
  },
  "lint": {
    "locations": [ "*.json", "darksky/**/*.ts", "tomorrow/**/*.ts" ],
    "rules": { }
  },
  "serve": {
    "sslKey": "node_modules/@vladmandic/build/cert/https.key",
    "sslCrt": "node_modules/@vladmandic/build/cert/https.crt",
    "httpPort": 10050,
    "httpsPort": 10051,
    "documentRoot": "",
    "defaultFolder": "public/",
    "defaultFile": "index.html",
    "cors": false
  },
  "build": {
    "global": {
      "target": "es2018",
      "sourcemap": true,
      "treeShaking": true,
      "ignoreAnnotations": true,
      "minify": true,
      "platform": "browser",
      "format": "esm",
    "banner": { "js": "/*\n  Weather\n  homepage: <https://github.com/vladmandic/weather>\n  author: <https://github.com/vladmandic>'\n*/\n" }
    },
    "development": {
      "minify": true
    },
    "targets": [
      {
        "name": "tomorrow",
        "input": "tomorrow/tomorrow.ts",
        "output": "public/tomorrow.js"
      },
      {
        "name": "service-worker",
        "input": "tomorrow/pwa-serviceworker.ts",
        "output": "public/pwa-serviceworker.js"
      },
      {
        "name": "darksky",
        "input": "darksky/darksky.ts",
        "output": "public/darksky.js"
      }
    ]
  },
  "watch": {
    "locations": [ "tomorrow/**/*", "darksky/**/*" ]
  },
  "typescript": {
    "allowJs": false
  }
}
